---
import Image from 'astro/components/Image.astro';
import pfp from './../../public/icon.webp';
import Layout from '../layouts/Layout.astro';
import LatestBlogPost from './_latest-blog-post.astro';
import Programming from './_programming.astro';
import NowPlaying from './_now-playing.astro';
---

<Layout>
    <div>
        <div class="relative -z-10 mx-auto -mb-4 size-30">
            <Image src={pfp} class="rounded-t-2xl" alt="" />
            <div
                class="to-background absolute bottom-0 left-0 h-1/3 w-full bg-gradient-to-b from-transparent"
            >
            </div>
        </div>
        <p class="text-primary text-center text-3xl font-semibold">
            rdcsq
        </p>
    </div>
    <div class="mx-auto max-w-lg">
        <p class="my-4 text-center">
            i write code and try to avoid breaking stuff. mostly into full-stack webdev and sometimes android dev
        </p>
        <section class="mb-8 flex w-full gap-3">
            <a
                href="https://github.com/rdcsq"
                target="_blank"
                class="bg-primary text-on-primary hover:bg-primary-hover inline-block w-full rounded-full p-2 text-center transition-colors"
            >
                <i class="iconify logos--github-icon mr-1 align-middle"></i>
                <span style="vertical-align: middle;">GitHub</span>
            </a>
        </section>
    </div>
    <LatestBlogPost />
    <Programming />
    <NowPlaying server:defer />
</Layout>
